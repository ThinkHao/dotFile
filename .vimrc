set enc=utf-8
set nocompatible
source $VIMRUNTIME/vimrc_example.vim

set nobackup

if has('persistent_undo')
	set undofile
	set undodir=~/.vim/undodir
	if !isdirectory(&undodir)
		call mkdir(&undodir, 'p', 0700)
	endif
endif

if has('mouse')
	if has('gui_running') || (&term =~ 'xterm' && !has('mac'))
		set mouse=a
	else
		set mouse=nvi
	endif
endif
